{
	"name": "opl-electron-app",
	"version": "1.1.0",
	"main": "main.js",
	"description": "OPL Desktop App",
	"author": {
		"name": "Rander Robin",
		"email": "rander.robin@opl.digikey.com"
	},
	"license": "ISC",
	"keywords": [
		"OPL",
		"Electron",
		"Desktop"
	],
	"scripts": {
		"start": "electron .",
		"build": "electron-builder",
		"dist": "electron-builder --publish never"
	},
	"dependencies": {
		"electron-store": "^10.0.1",
		"electron-updater": "^6.3.9",
		"jquery": "^3.7.1",
		"node-fetch": "^3.3.2"
	},
	"devDependencies": {
		"electron": "^34.1.1",
		"electron-builder": "^25.1.8"
	},
	"build": {
		"appId": "com.opl.desktop",
		"productName": "OPL Desktop App",
		"directories": {
			"output": "dist"
		},
		"files": [
			"**/*",
			"!node_modules/.cache/**",
			"!dist/**"
		],
		"win": {
			"target": "nsis",
			"icon": "assets/scraping.ico"
		},
		"mac": {
			"target": "dmg",
			"icon": "assets/scraping.icns"
		},
		"linux": {
			"target": ["AppImage", "deb"],
			"icon": "assets/scraping.png"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "codeacioustech",
				"repo": "opl-electron-app"
			}
		]
	}
}
